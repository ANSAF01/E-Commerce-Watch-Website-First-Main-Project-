<%- include('../partials/head', { title: 'Reset Password' }) %>
    <%- include('../partials/header') %>

        <div class="container py-5" style="max-width:480px;">
            <h4 class="text-center mb-4 fw-bold">Set New Password</h4>
            <p class="text-center text-muted mb-4">Enter your new password</p>

            <% if (error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>

                    <form method="POST" action="/auth/reset-password" novalidate>
                        <input type="hidden" name="email" value="<%= email %>">

                        <div class="mb-3">
                            <label class="form-label fw-semibold">New Password</label>
                            <div class="password-field">
                                <input type="password" name="password"
                                    class="form-control <%= errors.password ? 'is-invalid' : '' %>"
                                    placeholder="Enter new password">
                                <button type="button" class="password-toggle-btn" onclick="togglePassword(this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <% if (errors.password) { %>
                                <div class="invalid-feedback d-block">
                                    <%= errors.password.msg %>
                                </div>
                                <% } %>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Confirm Password</label>
                            <div class="password-field">
                                <input type="password" name="confirmPassword"
                                    class="form-control <%= errors.confirmPassword ? 'is-invalid' : '' %>"
                                    placeholder="Confirm password">
                                <button type="button" class="password-toggle-btn" onclick="togglePassword(this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <% if (errors.confirmPassword) { %>
                                <div class="invalid-feedback d-block">
                                    <%= errors.confirmPassword.msg %>
                                </div>
                                <% } %>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-lock me-2"></i>Reset Password
                        </button>

                        <p class="text-center mt-3 small"><a href="/auth/login">Back to Login</a></p>
                    </form>
        </div>

        <%- include('../partials/footer') %>