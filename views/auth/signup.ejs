<%- include('../partials/head', { title: 'Sign Up' }) %>
    <%- include('../partials/header') %>

        <div class="container py-5" style="max-width: 480px;">
            <h3 class="text-center mb-4 fw-bold">Create Account</h3>
            <form method="POST" action="/auth/signup" novalidate>
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="fullname" class="form-control"
                        value="<%= locals.old ? old.fullname : '' %>">
                    <% if (errors.fullname) { %><small class="text-danger">
                            <%= errors.fullname.msg %>
                        </small>
                        <% } %>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input type="email" name="email" class="form-control" value="<%= locals.old ? old.email : '' %>">
                    <% if (errors.email) { %><small class="text-danger">
                            <%= errors.email.msg %>
                        </small>
                        <% } %>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="password-field">
                        <input type="password" name="password" class="form-control">
                        <button type="button" class="password-toggle-btn js-toggle-password">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <% if (errors.password) { %><small class="text-danger">
                            <%= errors.password.msg %>
                        </small>
                        <% } %>
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <div class="password-field">
                        <input type="password" name="confirmPassword" class="form-control">
                        <button type="button" class="password-toggle-btn js-toggle-password">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <% if (errors.confirmPassword) { %><small class="text-danger">
                            <%= errors.confirmPassword.msg %>
                        </small>
                        <% } %>
                </div>
                <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                <p class="text-center mt-3 small">Already have an account? <a href="/auth/login">Login</a></p>
            </form>
        </div>

        <%- include('../partials/footer') %>