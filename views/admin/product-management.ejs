<%- include('./partials/header', { title: 'Products' }) %>

  <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Products</h1>
    <a href="/admin/products/add" class="btn btn-primary">
      <i class="fas fa-plus me-2"></i>Add Product
    </a>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <form action="/admin/products" method="GET" class="d-flex">
        <input type="text" name="search" class="form-control me-2" placeholder="Search products..."
          value="<%= typeof search !== 'undefined' ? search : '' %>">
        <button type="submit" class="btn btn-outline-secondary">Search</button>
      </form>
    </div>
  </div>

  <% if (locals.success && locals.success.length> 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i>
      <%= success[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>
      <% if (locals.error && locals.error.length> 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i>
          <%= error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>Image</th>
                  <th>Product Name</th>
                  <th>Category</th>
                  <th>Price</th>
                  <th>Stock</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (locals.products && products.length> 0) { %>
                  <% products.forEach(p=> { %>
                    <tr>
                      <td>
                        <% if (p.images && p.images.length> 0) { %>
                          <img src="<%= p.images[0] %>" alt="<%= p.name %>"
                            style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                          <% } else { %>
                            <div
                              style="width: 50px; height: 50px; background: #e9ecef; border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                              <i class="fas fa-image text-muted"></i>
                            </div>
                            <% } %>
                      </td>
                      <td>
                        <div class="fw-semibold">
                          <%= p.name %>
                        </div>
                        <small class="text-muted">ID: <%= p._id %></small>
                      </td>
                      <td>
                        <%= p.category ? p.category.name : '-' %>
                      </td>
                      <td>â‚¹<%= p.displayPrice %>
                      </td>
                      <td>
                        <% if (p.stock <=0) { %>
                          <span class="badge bg-danger">Out of Stock</span>
                          <% } else if (p.stock <=10) { %>
                            <span class="badge bg-warning text-dark">
                              <%= p.stock %> Left
                            </span>
                            <% } else { %>
                              <span class="badge bg-success">
                                <%= p.stock %> In Stock
                              </span>
                              <% } %>
                      </td>
                      <td>
                        <div class="d-flex align-items-center gap-2">
                          <label class="toggle-switch">
                            <input type="checkbox" class="toggle-product-switch" data-id="<%= p._id %>" <%=p.isActive
                              ? 'checked' : '' %>>
                            <span class="slider"></span>
                          </label>
                          <span class="status-text">
                            <%= p.isActive ? 'Listed' : 'Unlisted' %>
                          </span>
                        </div>
                      </td>
                      <td>
                        <a href="/admin/products/edit/<%= p._id %>" class="btn btn-sm btn-outline-primary me-2"
                          title="Edit">
                          <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <button class="btn btn-sm btn-outline-danger delete-product" data-id="<%= p._id %>"
                          title="Delete">
                          <i class="fas fa-trash me-1"></i>Delete
                        </button>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="7" class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                            No products found
                          </td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>

          <%- include('../partials/pagination', { pagination }) %>

            <%- include('./partials/footer') %>