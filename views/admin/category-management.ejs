<%- include('./partials/header', { title: 'Categories' }) %>

  <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Categories</h1>
    <a href="/admin/categories/add" class="btn btn-primary">
      <i class="fas fa-plus me-2"></i>Add Category
    </a>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <form action="/admin/categories" method="GET" class="d-flex">
        <input type="text" name="search" class="form-control me-2" placeholder="Search categories..."
          value="<%= typeof search !== 'undefined' ? search : '' %>">
        <button type="submit" class="btn btn-outline-secondary">Search</button>
      </form>
    </div>
  </div>

  <% if (locals.success && locals.success.length> 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i>
      <%= success[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% } %>
      <% if (locals.error && locals.error.length> 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="fas fa-exclamation-circle me-2"></i>
          <%= error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>Category Name</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (locals.categories && categories.length> 0) { %>
                  <% categories.forEach(c=> { %>
                    <tr>
                      <td>
                        <div class="fw-semibold">
                          <%= c.name %>
                        </div>
                        <small class="text-muted">ID: <%= c._id %></small>
                      </td>
                      <td>
                        <small>
                          <%= c.description ? c.description.substring(0, 50) + '...' : '-' %>
                        </small>
                      </td>
                      <td>
                        <div class="d-flex align-items-center gap-2">
                          <label class="toggle-switch">
                            <input type="checkbox" class="toggle-category-switch" data-id="<%= c._id %>" <%=c.isActive
                              ? 'checked' : '' %>>
                            <span class="slider"></span>
                          </label>
                          <span class="status-text">
                            <%= c.isActive ? 'Listed' : 'Unlisted' %>
                          </span>
                        </div>
                      </td>
                      <td>
                        <a href="/admin/categories/edit/<%= c._id %>" class="btn btn-sm btn-outline-primary me-2"
                          title="Edit">
                          <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <button class="btn btn-sm btn-outline-danger delete-category" data-id="<%= c._id %>"
                          title="Delete">
                          <i class="fas fa-trash me-1"></i>Delete
                        </button>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                            No categories found
                          </td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>

          <%- include('../partials/pagination', { pagination, search }) %>

            <%- include('./partials/footer') %>
              <script src="/js/admin/category-management.js"></script>