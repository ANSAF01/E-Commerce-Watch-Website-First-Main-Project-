<%- include('../partials/head', { title: title || 'Product Detail' }) %>
    <%- include('../partials/header') %>

        <main class="container py-5">
            <div class="row g-5">
                <!-- Image Gallery Section -->
                <div class="col-lg-6">
                    <div class="row g-2">
                        <!-- Thumbnails (Desktop: Left, Mobile: Bottom) -->
                        <div class="col-2 order-2 order-lg-1">
                            <div class="d-flex flex-column gap-2" style="max-height: 500px; overflow-y: auto;">
                                <% if (product.images && product.images.length> 0) { %>
                                    <% product.images.forEach((img, index)=> { %>
                                        <img src="<%= img.url || img %>"
                                            class="img-fluid rounded border thumbnail-item <%= index === 0 ? 'active' : '' %>"
                                            style="cursor: pointer; object-fit: cover; aspect-ratio: 1;"
                                            alt="<%= product.name %> thumbnail">
                                        <% }) %>
                                            <% } %>
                            </div>
                        </div>

                        <!-- Main Image -->
                        <div class="col-10 order-1 order-lg-2">
                            <div id="imageZoomContainer"
                                class="position-relative overflow-hidden rounded bg-white shadow-sm"
                                style="cursor: crosshair;">
                                <img id="mainImage"
                                    src="<%= (product.images && product.images.length > 0) ? (product.images[0].url || product.images[0]) : '/images/banner.jpg' %>"
                                    class="img-fluid w-100" style="object-fit: contain; max-height: 500px;"
                                    alt="<%= product.name %>">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Info Section -->
                <div class="col-lg-6">
                    <div class="ps-lg-4">
                        <!-- Category & Rating -->
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-light text-dark border">
                                <%= product.category ? product.category.name : 'General' %>
                            </span>

                        </div>

                        <h1 class="fw-bold mb-3">
                            <%= product.name %>
                        </h1>

                        <!-- Price -->
                        <div class="mb-4">
                            <% if (product.bestOfferPercent> 0) { %>
                                <div class="d-flex align-items-center gap-3">
                                    <h2 class="fw-bold text-success mb-0">₹<%= Math.round(product.offerPrice) %>
                                    </h2>
                                    <span class="text-decoration-line-through text-muted fs-5">₹<%=
                                            Math.round(product.price) %></span>
                                    <span class="badge bg-danger">
                                        <%= product.bestOfferPercent %>% OFF
                                    </span>
                                </div>
                                <p class="text-success small mt-1">Special Offer Applied!</p>
                                <% } else { %>
                                    <h2 class="fw-bold mb-0">₹<%= Math.round(product.price) %>
                                    </h2>
                                    <% } %>
                        </div>

                        <p class="text-muted mb-4" style="line-height: 1.6;">
                            <%= product.description %>
                        </p>

                        <!-- Stock Status -->
                        <div class="mb-4">
                            <% if (product.stock> 0) { %>
                                <div class="d-flex align-items-center text-success">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <span class="fw-semibold">In Stock (<%= product.stock %> available)</span>
                                </div>
                                <% } else { %>
                                    <div class="d-flex align-items-center text-danger">
                                        <i class="fas fa-times-circle me-2"></i>
                                        <span class="fw-semibold">Out of Stock</span>
                                    </div>
                                    <% } %>
                        </div>

                        <!-- Actions -->
                        <hr class="my-4">
                        <div class="actions-container" data-page="product-detail">
                            <div class="row align-items-end g-3">
                                <!-- Quantity -->
                                <div class="col-sm-4">
                                    <label class="form-label small fw-bold text-muted">Quantity</label>
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary" type="button" id="decrementBtn"
                                            disabled>-</button>
                                        <input type="text" class="form-control text-center" id="quantity" value="1"
                                            readonly>
                                        <button class="btn btn-outline-secondary" type="button" id="incrementBtn"
                                            <%=product.stock <=1 ? 'disabled' : '' %>>+</button>
                                    </div>
                                </div>

                                <!-- Buttons -->
                                <div class="col-sm-8">
                                    <div class="d-grid gap-2 d-md-flex">
                                        <button class="btn btn-primary flex-grow-1 add-to-cart-btn"
                                            data-product-id="<%= product._id %>" <%=product.stock <=0 ? 'disabled' : ''
                                            %>>
                                            <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                        </button>
                                        <button class="btn btn-outline-danger add-to-wishlist-btn"
                                            data-product-id="<%= product._id %>">
                                            <i class="fas fa-heart me-2"></i>Wishlist
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Meta Info -->
                        <div class="mt-4 pt-4 border-top">
                            <div class="row g-3 small text-muted">
                                <div class="col-6">
                                    <i class="fas fa-truck me-2"></i>Free Delivery
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-shield-alt me-2"></i>1 Year Warranty
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-undo me-2"></i>30 Days Return
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-headset me-2"></i>24/7 Support
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Related Products (Carousel-like grid) -->
            <% if (locals.related && related.length> 0) { %>
                <div class="mt-5 pt-5">
                    <h3 class="fw-bold mb-4">Related Products</h3>
                    <div class="row g-4">
                        <% related.forEach(p=> { %>
                            <div class="col-6 col-md-3">
                                <%- include('../partials/product-card', { product: p }) %>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <% } %>

        </main>

        <script>
            // Pass product metadata to client-side script
            window.PRODUCT_META = {
                stock: <%= product.stock %>,
                price: <%= product.price %>,
                offerPrice: <%= product.offerPrice || product.price %>
  };
        </script>
        <script src="/js/pages/product-detail-page.js"></script>
        <%- include('../partials/footer') %>