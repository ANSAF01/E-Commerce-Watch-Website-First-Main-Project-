<%- include('../partials/head', { title: 'Checkout' }) %>
  <%- include('../partials/header') %>

    <main class="container-fluid py-5">
      <div class="row g-4">
        <div class="col-12 col-md-3 col-lg-3">
          <div class="position-sticky" style="top: 5rem;">
            <%- include('../partials/profile-sidebar', { page: 'cart' }) %>
          </div>
        </div>
        <div class="col-12 col-md-9 col-lg-9">
          <div class="ps-md-3 mt-4">
            <h1 class="mb-3">Checkout</h1>
            <hr class="mb-4">

            <div class="row g-4">
              <div class="col-lg-8">
                <div class="card mb-4">
                  <div class="card-header bg-light">
                    <h5 class="mb-0">Delivery Address</h5>
                  </div>
                  <div class="card-body">
                    <% if (!addresses || addresses.length===0) { %>
                      <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        No saved addresses. <a href="#" data-bs-toggle="modal" data-bs-target="#addAddressModal">Add one
                          now</a> before checkout.
                      </div>
                      <% } else { %>
                        <div class="d-flex justify-content-end mb-3">
                          <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal"
                            data-bs-target="#addAddressModal">
                            <i class="fas fa-plus me-1"></i>Add New Address
                          </button>
                        </div>
                        <form id="checkoutForm">
                          <div class="row g-3">
                            <% addresses.forEach(a=> { %>
                              <div class="col-12">
                                <div class="form-check">
                                  <input class="form-check-input" type="radio" name="addressId" value="<%= a._id %>"
                                    id="addr-<%= a._id %>" <%=a.isDefault ? 'checked' : '' %> >
                                  <label class="form-check-label w-100" for="addr-<%= a._id %>">
                                    <div class="fw-semibold">
                                      <%= a.recipientName %>
                                    </div>
                                    <div class="text-muted small">
                                      <%= a.address %><br>
                                        <%= a.city %>, <%= a.state %> - <%= a.pincode %><br>
                                              <i class="fas fa-phone me-1"></i>
                                              <%= a.phone %>
                                    </div>
                                    <% if (a.isDefault) { %>
                                      <span class="badge bg-success mt-1">Default Address</span>
                                      <% } %>
                                  </label>
                                </div>
                              </div>
                              <% }) %>
                          </div>

                          <hr class="my-4">

                          <div class="mb-4">
                            <h5 class="mb-3">Payment Method</h5>

                            <div class="form-check mb-3">
                              <input class="form-check-input" type="radio" name="paymentMethod" value="cod" id="cod"
                                <%=isCODDisabled ? 'disabled' : (!hasInsufficientBalance ? 'checked' : '' ) %>
                              >
                              <label class="form-check-label <%= isCODDisabled ? 'text-muted' : '' %>" for="cod">
                                <strong>Cash on Delivery (COD)</strong>
                                <div class="text-muted small">Pay when you receive your order</div>
                                <% if (isCODDisabled) { %>
                                  <div class="small text-danger mt-1">
                                    <i class="fas fa-times-circle me-1"></i>Order above ₹<%= codMaxAmount %> not
                                      allowed for COD
                                  </div>
                                  <% } %>
                              </label>
                            </div>

                            <div class="form-check mb-3">
                              <input class="form-check-input" type="radio" name="paymentMethod" value="wallet"
                                id="wallet" <%=hasInsufficientBalance ? 'disabled' : (isCODDisabled ? 'checked' : '' )
                                %>
                              >
                              <label class="form-check-label <%= hasInsufficientBalance ? 'text-muted' : '' %>"
                                for="wallet">
                                <strong>Wallet Payment</strong>
                                <div class="text-muted small">Pay using your wallet balance</div>
                                <% if (!hasInsufficientBalance) { %>
                                  <div class="small text-success mt-1">
                                    <i class="fas fa-check-circle me-1"></i>Available: ₹<%= Math.round(walletBalance) %>
                                  </div>
                                  <% } else { %>
                                    <div class="small text-danger mt-1">
                                      <i class="fas fa-times-circle me-1"></i>Insufficient balance (Need: ₹<%=
                                        Math.round(summary.grandTotal) %>, Available: ₹<%= Math.round(walletBalance) %>)
                                    </div>
                                    <% } %>
                              </label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="paymentMethod" value="razorpay"
                                id="razorpay" <%=(isCODDisabled && hasInsufficientBalance) ? 'checked' : '' %>
                              >
                              <label class="form-check-label" for="razorpay">
                                <strong>Online Payment (Razorpay)</strong>
                                <div class="text-muted small">Secure payment via Razorpay</div>
                              </label>
                            </div>
                          </div>

                          <div class="d-flex gap-2">
                            <button type="button" class="btn btn-primary btn-lg" id="placeOrderBtn">
                              <i class="fas fa-check me-2"></i>Place Order
                            </button>
                            <a href="/user/cart" class="btn btn-outline-secondary btn-lg">Back to Cart</a>
                          </div>
                        </form>
                        <% } %>
                  </div>
                </div>
              </div>

              <div class="col-lg-4">
                <div class="card sticky-top" style="top: 6rem;">
                  <div class="card-header bg-light">
                    <h5 class="mb-0">Order Summary</h5>
                  </div>
                  <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                      <span class="text-muted">Price (<%= cart.items.length %> item<%= cart.items.length> 1 ? 's' : ''
                            %>)</span>
                      <span>₹<%= Math.round(summary.subtotal) %></span>
                    </div>

                    <% if (summary.discountTotal> 0) { %>
                      <div class="d-flex justify-content-between mb-2 text-success">
                        <span><i class="fas fa-tag me-1"></i>Discount</span>
                        <span>-₹<%= Math.round(summary.discountTotal) %></span>
                      </div>
                      <% } %>

                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                          <span class="text-muted">Delivery Charges</span>
                          <% if (summary.shippingFee> 0) { %>
                            <span>₹<%= Math.round(summary.shippingFee) %></span>
                            <% } else { %>
                              <span class="text-success"><strong>FREE</strong></span>
                              <% } %>
                        </div>

                        <% if (summary.discountTotal> 0) { %>
                          <div class="alert alert-success py-2 px-3 mb-3">
                            <small class="mb-0">
                              <i class="fas fa-check-circle me-1"></i>
                              You're saving <strong>₹<%= Math.round(summary.discountTotal) %></strong> on this order!
                            </small>
                          </div>
                          <% } %>

                            <div class="d-flex justify-content-between mb-2">
                              <h5 class="mb-0">Total Amount</h5>
                              <h4 class="mb-0 text-primary">₹<%= Math.max(0, Math.round(summary.grandTotal)) %>
                              </h4>
                            </div>

                            <!-- Coupon Section -->
                            <div class="mb-3">
                              <h6 class="fw-semibold mb-2">
                                <i class="fas fa-ticket-alt me-1"></i>All Coupons
                              </h6>

                              <% if (cart.couponCode) { %>
                                <div class="alert alert-success alert-sm py-2 mb-2">
                                  <i class="fas fa-check-circle me-1"></i>
                                  Coupon applied: <strong>
                                    <%= cart.couponCode %>
                                  </strong>
                                  <button type="button" class="btn btn-sm btn-link text-danger p-0 float-end"
                                    id="removeCouponBtn">
                                    Remove
                                  </button>
                                </div>
                                <% } else if (coupons.length> 0) { %>
                                  <div class="list-group list-group-sm">
                                    <% coupons.forEach(coupon=> { %>
                                      <div class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                          <strong>
                                            <%= coupon.code %>
                                          </strong>
                                          <% if (coupon.type==='PERCENT' ) { %>
                                            <span class="badge bg-info ms-2">
                                              <%= coupon.discountValue %>%
                                            </span>
                                            <% } else { %>
                                              <span class="badge bg-success ms-2">₹<%= coupon.discountValue %></span>
                                              <% } %>
                                                <% if (coupon.minPurchase> 0) { %>
                                                  <div class="small text-muted">Min: ₹<%= coupon.minPurchase %>
                                                  </div>
                                                  <% } %>
                                                    <% if (!coupon.isEligible) { %>
                                                      <div class="small text-danger">
                                                        <i class="fas fa-times-circle me-1"></i>
                                                        Min purchase not met
                                                      </div>
                                                      <% } %>
                                                        <% if (coupon.alreadyUsed) { %>
                                                          <div class="small text-warning">
                                                            <i class="fas fa-check-circle me-1"></i>
                                                            Already used
                                                          </div>
                                                          <% } %>
                                        </div>
                                        <% if (coupon.isEligible && !coupon.alreadyUsed) { %>
                                          <button type="button" class="btn btn-sm btn-primary apply-coupon-btn ms-2"
                                            data-code="<%= coupon.code %>">
                                            Use
                                          </button>
                                          <% } else if (!coupon.isEligible) { %>
                                            <button type="button" class="btn btn-sm btn-secondary ms-2" disabled>
                                              Not Eligible
                                            </button>
                                            <% } else if (coupon.alreadyUsed) { %>
                                              <button type="button" class="btn btn-sm btn-secondary ms-2" disabled>
                                                Used
                                              </button>
                                              <% } %>
                                      </div>
                                      <% }) %>
                                  </div>
                                  <% } else { %>
                                    <div class="alert alert-warning alert-sm py-2 mb-0">
                                      <i class="fas fa-info-circle me-1"></i>
                                      No coupons available
                                    </div>
                                    <% } %>
                            </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Add Address Modal -->
      <div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addAddressModalLabel">Add New Address</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addAddressForm">
              <div class="modal-body">
                <div class="row g-3">
                  <div class="col-12">
                    <label class="form-label">Address <span class="text-danger">*</span></label>
                    <input type="text" name="address" class="form-control" placeholder="Enter full address">
                    <small class="text-danger" id="error-address"></small>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">District <span class="text-danger">*</span></label>
                    <input type="text" name="district" class="form-control" placeholder="e.g., Ernakulam">
                    <small class="text-danger" id="error-district"></small>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">City <span class="text-danger">*</span></label>
                    <input type="text" name="city" class="form-control" placeholder="e.g., Kochi">
                    <small class="text-danger" id="error-city"></small>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">State <span class="text-danger">*</span></label>
                    <input type="text" name="state" class="form-control" placeholder="e.g., Kerala">
                    <small class="text-danger" id="error-state"></small>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Pincode <span class="text-danger">*</span></label>
                    <input type="text" name="pincode" class="form-control" placeholder="6 digits">
                    <small class="text-danger" id="error-pincode"></small>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Landmark (Optional)</label>
                    <input type="text" name="landmark" class="form-control" placeholder="Nearby landmark">
                    <small class="text-danger" id="error-landmark"></small>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Address</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

      <!-- Razorpay Script -->
      <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

      <script>
        // expose small runtime config for the static page script
        window.RAZORPAY_KEY = '<%= razorpayKeyId %>';
        window.CURRENT_USER_EMAIL = '<%= user ? user.email : '' %>';
        window.CHECKOUT_AMOUNT_CENTS = <%= Math.round(summary.grandTotal * 100) %>;
      </script>

      <script src="/js/user-common.js"></script>
      <script src="/js/pages/checkout-page.js"></script>