<%- include('../partials/head', { title: 'Order Successful' }) %>
<%- include('../partials/header') %>

<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="text-center py-5">
        <div class="mb-4">
          <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
        </div>
        
        <h1 class="mb-2">Thank You!</h1>
        <p class="lead text-muted mb-4">Your order has been placed successfully.</p>

        <% if (locals.order) { %>
          <div class="card mb-4">
            <div class="card-body">
              <h6 class="text-muted mb-2">Order Number</h6>
              <h4 class="text-brand mb-3">#<%= order.orderId %></h4>
              
              <div class="row text-center">
                <div class="col-6 mb-3">
                  <h6 class="text-muted mb-1">Order Total</h6>
                  <h5 class="mb-0">â‚¹<%= Math.max(0, Math.round(order.grandTotal || 0)) %></h5>
                </div>
                <div class="col-6 mb-3">
                  <h6 class="text-muted mb-1">Payment Method</h6>
                  <p class="mb-0">
                    <% if (order.paymentMethod === 'RAZORPAY') { %>
                      Online Payment (Razorpay)
                    <% } else if (order.paymentMethod === 'COD') { %>
                      Cash on Delivery
                    <% } else if (order.paymentMethod === 'WALLET') { %>
                      Wallet Payment
                    <% } else { %>
                      <%= order.paymentMethod || 'N/A' %>
                    <% } %>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div class="alert alert-success mb-4">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Order Confirmed!</strong><br>
            You can track your order status anytime from your account.
          </div>
        <% } %>

        <div class="d-flex gap-2 justify-content-center">
          <a href="/user/orders" class="btn btn-primary btn-lg">
            <i class="fas fa-list me-2"></i>View My Orders
          </a>
          <a href="/shop" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
          </a>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
